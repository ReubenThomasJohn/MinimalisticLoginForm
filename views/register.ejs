<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input
                id="name"
                type="name"
                class="form-control"
                name="name"
                onchange="validatePassword()"
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                id="email"
                type="email"
                class="form-control"
                name="username"
                onchange="checkEmail()"
              />
            </div>
            <div class="form-group">
              <label for="email">Date Of Birth</label>
              <input
                id="dob"
                type="dob"
                class="form-control"
                name="dob"
                onchange="validatePassword()"
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                id="p1"
                type="password"
                class="form-control"
                name="password"
                oninput="validatePassword()"
              />
            </div>
            <div class="form-group">
              <label for="password2">Re-Enter Password</label>
              <input
                id="p2"
                type="password"
                class="form-control"
                oninput="validatePassword()"
              />
            </div>
            <button
              id="submitButton"
              type="submit"
              class="btn btn-dark"
              disabled
            >
              Register
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
        </div>
      </div>
    </div>
    <script src="src/registerPasswordValidation.js"></script>
    <script src="src/registerEmailCheck.js"></script>
  </div>
</div>

<%- include('partials/header') %>
